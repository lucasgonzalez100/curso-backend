
<div class="comand-container">
    <div class="comand-card">
        <h1>Agregar Producto</h1>
        <form id="yourFormId" action="realProducts" method="POST">
            <label for="title">Título del Producto:</label>
            <input type="text" id="title" name="title">

            <label for="description">Descripción:</label>
            <textarea id="description" name="description"></textarea>

            <label for="price">Precio:</label>
            <input type="number" id="price" name="price" min="0.01" step="0.01">

            <label for="thumbnail">URL de la Imagen (Thumbnail):</label>
            <input type="text" id="thumbnail" name="thumbnail">

            <label for="code">Código del Producto:</label>
            <input type="text" id="code" name="code">

            <label for="stock">Stock:</label>
            <input type="number" id="stock" name="stock" min="0">

            <button type="submit">Agregar Producto</button>

        </form>
    </div>

<div class="comand-card">
    <h1>Editar Producto</h1>
    <form id="editForm" action="realProducts" method="POST">
        <!-- Agrega un campo oculto para almacenar el ID del producto que se va a editar -->
        <input type="hidden" id="productId" name="productId" value="ID_DEL_PRODUCTO_A_EDITAR">

        <label for="title">Título del Producto:</label>
        <input type="text" id="title" name="title" value="TÍTULO_ACTUAL_DEL_PRODUCTO">

        <label for="description">Descripción:</label>
        <textarea id="description" name="description">DESCRIPCIÓN_ACTUAL_DEL_PRODUCTO</textarea>

        <label for="price">Precio:</label>
        <input type="number" id="price" name="price" min="0.01" step="0.01" value="PRECIO_ACTUAL_DEL_PRODUCTO">

        <label for="thumbnail">URL de la Imagen (Thumbnail):</label>
        <input type="text" id="thumbnail" name="thumbnail" value="URL_ACTUAL_DEL_THUMBNAIL">

        <label for="code">Código del Producto:</label>
        <input type="text" id="code" name="code" value="CÓDIGO_ACTUAL_DEL_PRODUCTO">

        <label for="stock">Stock:</label>
        <input type="number" id="stock" name="stock" min="0" value="STOCK_ACTUAL_DEL_PRODUCTO">

        <button type="submit">Guardar Cambios</button>
    </form>
</div>


    <div class="comand-card">
        <h1>Eliminar Producto</h1>

        <form id="FormDelete" action="realProducts" method="DELETE">

        <label for="id">Código del Producto:</label>
        <input type="text" id="id" name="id">

        <button type="submit">Eliminar Producto</button>
        </form>
    </div>
    </div>

<h1>Lista de Productos</h1>
<div class="product-container">
    {{#each productos}}
    <div class="product-card">
        {{!-- <img src={{thumbnail}} alt={{title}}> --}}
        <h2>{{title}}</h2>
        <p>{{description}}</p>
        <p>Precio: {{price}}</p>
        <p>Stock: {{stock}}</p>
        <button>Agregar al carrito</button>
        <button>detelles</button>
    </div>
    {{/each}}

</div>
